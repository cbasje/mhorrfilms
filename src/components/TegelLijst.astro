---
import { getCollection } from "astro:content";
import { groupTegelsByJaar } from "../lib/date";
import Tegel from "./Tegel.astro";

const tegels = await getCollection("tegels");
const groupedTegels = groupTegelsByJaar(tegels);
---

<div id="portfolio">
    <h1>PORTFOLIO</h1>

    <div class="tijdlijn">
        {
            tegels &&
                Object.keys(groupedTegels).map((key, i) => (
                    <section class="jaar">
                        <span class="jaartal">{key}</span>

                        <hr />

                        <ul class="filmlijst">
                            {groupedTegels[key] &&
                                groupedTegels[key]
                                    .sort(
                                        (a, b) =>
                                            b.data.datum.valueOf() -
                                            a.data.datum.valueOf()
                                    )
                                    .map((t) => <Tegel tegel={t} />)}
                        </ul>
                    </section>
                ))
        }
    </div>
</div>

<style lang="scss">
    div#portfolio {
        div.tijdlijn {
            display: flex;
            flex-direction: column-reverse;
            gap: 1rem;

            section.jaar {
                display: flex;
                flex-direction: row;
                align-items: flex-start;
                gap: 1rem;

                span.jaartal {
                    position: sticky;
                    top: 1rem;
                    width: 5rem;
                }

                hr {
                    all: unset;

                    align-self: stretch;
                    border: 0.025rem solid var(--accentkleur);
                    border-radius: 1rem;
                }

                ul.filmlijst {
                    margin: 0;
                    padding: 0;
                    width: 100%;
                    min-width: 1px;
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                }
            }
        }
    }

    @media only screen and (width < 678px) {
        section#portfolio {
            h1 {
                padding-inline: 0.5rem;
            }

            div.tijdlijn {
                gap: 3rem;

                div.jaar {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 1rem;

                    span.jaartal {
                        z-index: 2;
                        width: 100%;
                        background-color: var(--hoofdkleur);
                        top: 0;
                        inset-inline: 0;
                        line-height: 1rem;
                        padding-block: 1.25rem;
                        padding-inline: 0.5rem;
                    }

                    hr {
                        position: sticky;
                        top: 3.5rem;
                        inset-inline: 0;
                        z-index: 3;
                    }
                }
            }
        }
    }
</style>
